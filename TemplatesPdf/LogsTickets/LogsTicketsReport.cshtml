@model WEB_API_TICKETS_SUPPORT.Models.LogTicketModel

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>test correo</title>
</head>

<body>

    <style>
        #MessageContainer {
            border-style: solid;
            border-color: black;

        }

        #ContainerSolution {
            margin-left: 50px;
            margin-right: 50px;
        }

        hr {
            color: black;
        }

        table {
            width: 100%;
            border: 1px solid black;
            border-color: black;
            border-style: solid;
            border-collapse: collapse;
        }

        td {
            text-align: center;
            border: 1px solid black;
        }

        h2 {
            margin-left: 20px;
        }

        .button {
            display: block;
            width: 500px;
            height: 25px;
            background: #29b330;
            padding: 10px;
            text-align: center;
            border-radius: 5px;
            color: white;
            font-weight: bold;
            line-height: 25px;
        }
    </style>

    <div id="MessageContainer">

        <h2>CLOSED TICKET HISTORY REPORT</h2>
        <hr>

        <div id="ContainerSolution">

            <table>

                <thead>
                    <tr>
                        <th>TICKET NUMBER</th>
                        <th>CLIENT NAME</th>
                        <th>TYPE OF SUPPORT</th>
                        <th>DETAILS ABOUT THS TICKET</th>
                        <th>SOLUTION DETAILS</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.TicketNumber</td>
                        <td>@Model.Name</td>
                        <td>@Model.TypeRequest</td>
                        <td>@Model.Details</td>
                        <td>@Model.SolutionDetails</td>
                    </tr>
                  
                </tbody>

            </table>
          
        </div>
        <hr>

    </div>

</body>

</html>